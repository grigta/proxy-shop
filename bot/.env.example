# Telegram Bot Configuration
# Required: Bot token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567

# Backend API Configuration
# Required: URL of the backend API server (without trailing slash)
BACKEND_API_URL=http://localhost:8000

# Redis Configuration
# Required: Redis connection URL for FSM storage
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Support Configuration
# Optional: Telegram user ID for support contact
SUPPORT_USER_ID=123456789

# Localization Configuration
# Optional: Default language for new users (ru/en)
DEFAULT_LOCALE=ru

